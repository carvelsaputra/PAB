<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_Hi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hi,"
        android:gravity="right"
        android:textSize="20dp"
        android:layout_marginBottom="70dp"
        />
    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Hi"
        android:text="Hello"
        android:textSize="20dp"
        />
    <ImageView
        android:id="@+id/iv_android"
        android:layout_below="@+id/tv_hello"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="20dp"
        />
<androidx.cardview.widget.CardView
    android:id="@+id/cv_write"
    android:layout_marginBottom="20dp"
    android:layout_below="@+id/iv_android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="Write Something"
        android:textSize="20dp"
        android:padding="10dp"
        />
</androidx.cardview.widget.CardView>
    <TextView
        android:layout_below="@+id/cv_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Carvel Saputra Martaloho"/>
</RelativeLayout>